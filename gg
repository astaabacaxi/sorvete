<body>
    <div class="container">
        <h1>Calculadora de Valor do Sorvete</h1>
        <p>Digite o peso em gramas:</p>
        <input type="number" id="peso" placeholder="Peso em gramas">
        <button onclick="calcularValor()">Calcular</button>
        <div class="result" id="resultado"></div>
    </div>

    <script>
        function calcularValor() {
            const peso = parseFloat(document.getElementById('peso').value);

            if (isNaN(peso) || peso <= 0) {
                document.getElementById('resultado').innerText = "Por favor, insira um peso válido.";
                return;
            }

            const valorPorGrama = 0.037; // 3 centavos por grama
            const valorSorvete = peso * valorPorGrama;

            document.getElementById('resultado').innerText = 
                `O valor do sorvete é: R$ ${valorSorvete.toFixed(2)}`;
        }
    </script>
</body>
